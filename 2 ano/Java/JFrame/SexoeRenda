    private void btnAdActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnAdActionPerformed
        // TODO add your handling code here:
        if (rdbSexo.isSelected()==true) 
            cmbMasc.addItem(tNome.getText() + "/" + tRenda.getText());
            
        else
           if (rdbSexo2.isSelected())
                cmbFem.addItem(tNome.getText() + "/" + tRenda.getText());
            
        
    }//GEN-LAST:event_btnAdActionPerformed

    private void btnRecActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnRecActionPerformed
        // TODO add your handling code here:
        String nome2="";
        String nome = String.valueOf(cmbMasc.getSelectedItem());
        int posicao=nome.indexOf("/");
        nome2=nome.substring(0,posicao);
        tNome.setText(nome2);
        String renda=nome.substring(posicao+1);
        tRenda.setText(renda);
    }//GEN-LAST:event_btnRecActionPerformed

